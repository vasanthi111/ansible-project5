### VPC Creation ####

---
- hosts: localhost
  become: yes
  tasks:
    - ec2_vpc_net:
        aws_access_key: 
        aws_secret_key: 
        cidr_block: 10.0.0.0/16
        name: vasanthi-vpc
        region: us-east-1
        state: present  # to delete Vpc then replace absent instead of presnt
      register: vpc_result

#### Internet gateway Creation #######

    - ec2_vpc_igw:
        aws_access_key: 
        aws_secret_key: 
        vpc_id: "{{ vpc_result.vpc.id }}"
        region: us-east-1
        state: present
        tags:
          Name: bhargavi-igw
      register: igw_result

 ## create an vpc pub subnet


    - ec2_vpc_subnet:
        aws_access_key:
        aws_secret_key: 
        vpc_id: "{{ vpc_result.vpc.id }}"
        region: us-east-1
        az: us-east-1a      # az is the availability zone
        state: present
        cidr: 10.0.0.0/20
        # enable public ip
        map_public: yes
        resource_tags:
          Name: vasanthi-pub
      register: pubsubnet_result

    ## create an vpc pvt subnet


    - ec2_vpc_subnet:
        aws_access_key:
        aws_secret_key: 
        vpc_id: "{{ vpc_result.vpc.id }}"
        region: us-east-1
        az: us-east-1b      # az is the availability zone
        state: present
        cidr: 10.0.16.0/20
        # enable public ip
        map_public: no
        resource_tags:
          Name: vasanthi-pvt
      register: pvtsubnet_result

## create an vpc pub route table


    - ec2_vpc_route_table:
        aws_access_key: 
        aws_secret_key: 
        vpc_id: "{{ vpc_result.vpc.id }}"
        region: us-east-1
        state: present
        tags:
          Name: vasanthi-pub-rt
        subnets: [ "{{ pubsubnet_result.subnet.id }}" ]
        # create routes
        routes:
          - dest: 0.0.0.0/0
            gateway_id: "{{ igw_result.gateway_id }}"
      register: public_route_table

    ## create an vpc pvt route table


    - ec2_vpc_route_table:
        aws_access_key: 
        aws_secret_key: 
        vpc_id: "{{ vpc_result.vpc.id }}"
        region: us-east-1
        state: present
        tags:
          Name: vasanthi-pvt-rt
        subnets: [ "{{ pvtsubnet_result.subnet.id }}" ]
      register: private_route_table

   ## create an vpc security groups


    - ec2_group:
        aws_access_key: 
        aws_secret_key: 
        vpc_id: "{{ vpc_result.vpc.id }}"
        region: us-east-1
        state: present
        name: vasanthi-sg
        description: allow
        tags:
          Name: mythrika-sg
        rules:
        - proto: all
          cidr_ip: 0.0.0.0/0
          rule_desc: allow all traffic
      register: security_group_results


   ## tasks file for ec2-launch ##


    - ec2:
        image: ami-0ca9fb66e076a6e32
        instance_type: t2.micro
        region: us-east-1
        wait: yes
        count: 1
        state: present
        vpc_subnet_id: "{{ pubsubnet_result.subnet.id }}"
        assign_public_ip: yes
        group_id: "{{ security_group_results.group_id }}"
        aws_access_key: 
        aws_secret_key: 
        instance_tags:
                Name: vasanthi            
